@model EmployeeVM
@{
    ViewData["Title"] = "Edit";
  var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}



<div class="alert alert-danger ">
    <h3>@ViewBag.Message</h3>
</div>
@* <div class="alert alert-danger ">
    <h3>@ViewData["MessageData"]</h3>
</div> *@

<h1>Edit  Employee</h1>


<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input hidden asp-for="Id" value="@Model.Id" />

    @if (Model.ImageURL is not null)
    {
        <div class="form-control">

            <img src="~/Files/image/@Model.ImageURL" class="image-circle" height="40" width="40" alt="Employee image" />

        </div>
    }

    <input hidden asp-for="ImageURL" />

    <partial name="PartialViews/CreateEditPartialView" />


    <div class="mt-3">
        <input type="submit" value="submit" class="btn btn-primary mt-5" asp-route-id="Id" />
        <a asp-action="Index" class="btn btn-warning mt-5">Back To List</a>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}







