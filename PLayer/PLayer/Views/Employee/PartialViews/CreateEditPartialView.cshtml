@model EmployeeVM
@{
   
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input class="form-control" asp-for="Salary" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input class="form-control" asp-for="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input class="form-control" asp-for="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" />
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>


<div class="form-group">

    <label asp-for="@Model.DepartmentId" class="col-form-label"></label>
    <select asp-for="@Model.DepartmentId" asp-items="Departments" class="form-control">
        <option>--Select Department--</option>
    </select>
    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
</div>


<div class="form-group">
    <label class="col-form-label" asp-for="@Model.Image">  </label>
    <input class="form-control" type="file" asp-for="@Model.Image" />

</div>


<div class="form-group" form-check>
    <input class="form-check-input" type="checkbox" asp-for="@Model.IsActive" />
    <label class="form-check-label" asp-for="@Model.IsActive">
    </label>
</div>
