@using DALayer.Entities
@model IEnumerable<UserVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Users</h1>

<form class="my-3" asp-action="Index" asp-controller="User">
    <div class="row">
        <div class="col-sm-8 ">
            <input placeholder="Search ..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-dark" />
        </div>
    </div>

</form>


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">

        <thead>
            <tr>


                <th>@Html.DisplayNameFor(x => x.Id)</th> 
                <th>@Html.DisplayNameFor(x => x.FirstName)</th>
                <th>@Html.DisplayNameFor(x => x.LastName)</th>
                <th>@Html.DisplayNameFor(x => x.Email)</th>
                @* <th>@Html.DisplayNameFor(x => x.Roles)</th> *@
            

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                   @*  <td>@string.Join("," ,item.Roles)</td> *@
                    

             <partial name="_ButtonPartialView" model="@item.Id" />

                </tr>
            }
        </tbody>


    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Employee Found !</h3>
    </div>

}

